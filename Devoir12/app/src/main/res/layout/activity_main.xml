<?xml version="1.0" encoding="utf-8"?>
<!--suppress AndroidUnresolvableTag -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="401dp"
        android:layout_height="376dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/question1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/card_background"
            android:elevation="20dp"
            android:gravity="center"
            android:hint="Who is the 44th President of the United States?"
            android:textColor="@color/yellow_500"
            android:textSize="40sp" />


        <TextView
            android:id="@+id/reponse"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/reponse"
            android:background="@drawable/card_background"
            android:elevation="20dp"
            android:gravity="center"
            android:hint="Barack Obama"
            android:textColor="@color/yellow_500"
            android:textSize="40sp"

            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="416dp"
        android:layout_height="283dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <RelativeLayout
            android:layout_width="414dp"
            android:layout_height="237dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="-13dp">

            <TextView
                android:id="@+id/choix_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="110dp"
                android:layout_marginBottom="179dp"
                android:background="@drawable/choix_background"
                android:elevation="2dp"
                android:hint="Barack Obama"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/choix_2"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="62dp"
                android:layout_marginEnd="-26dp"
                android:layout_marginBottom="117dp"
                android:background="@drawable/choix_background"
                android:elevation="2dp"
                android:hint="Bill Clinton"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/choix_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="110dp"
                android:layout_marginBottom="54dp"
                android:background="@drawable/choix_background"
                android:elevation="2dp"
                android:hint="George H W.Bush"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/myBtn"
                android:layout_width="76dp"
                android:layout_height="95dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="55dp"
                android:elevation="2dp"
                android:src="@drawable/button_add" />

            <ImageView
                android:id="@+id/myBtnEdit"
                android:layout_width="68dp"
                android:layout_height="78dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="326dp"
                android:layout_marginBottom="64dp"
                android:elevation="2dp"
                android:src="@drawable/button_edit" />

            <ImageView
            android:id="@+id/button_next"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="164dp"
            android:src="@drawable/button_next" />

            <ImageView
                android:id="@+id/deleteBtn"
                android:layout_width="58dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="333dp"
                android:layout_marginBottom="171dp"
                android:src="@drawable/button_delete" />
        </RelativeLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>